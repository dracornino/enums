    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Run current file",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["--runInBand", "${relativeFile}"],
            "cwd": "${workspaceFolder}",
            // "console": "integratedTerminal",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "name": "Run workspace",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["--runInBand"],
            "cwd": "${workspaceFolder}",
            // "console": "integratedTerminal",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
